@model PhanBaoAn.Context.product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center text-danger">Delete Product - @Model.name</h2>

    <div class="alert alert-warning mt-4" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this product?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h4 class="card-title">Product Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.name)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.price)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.price)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.image)
                </dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.image))
                    {
                        <img src="@Model.image" alt="@Model.name" class="img-fluid" style="max-width: 200px; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1);" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.categoryId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.categoryId)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.typeId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.typeId)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.brandId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.brandId)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-right">
            @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
            }
        </div>
    </div>
</div>
